@model RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary()


    <div class="form-group row">
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", placeholder = "Nickname" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </div>
}