@model BlogR.Core.Data.Entities.Post

<div class="post-preview">
    <a href="@Url.RouteUrl("Post", new { Slug = Model.Slug })">
        <h2 class="post-title">
            @Model.Title
        </h2>
        <h3 class="post-subtitle">
            @Model.Summary
        </h3>
    </a>
    <p class="post-meta">
        Posted by
        <a href="#">@Model.Author.Nickname</a>
        on @Model.CreationTimeUtc
    </p>
</div>
<hr>